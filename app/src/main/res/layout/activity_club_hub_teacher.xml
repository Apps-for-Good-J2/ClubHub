<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B4DBF6F0"
    tools:context=".ClubHubTeacherActivity">

    <Button
        android:id="@+id/teacherCLubFinderButton"
        android:layout_width="104dp"
        android:layout_height="48dp"
        android:background="#C4D7F2"
        android:fontFamily="casual"
        android:onClick="goToClubFinder"
        android:text="@string/clubFinderStr"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/teacherSignOutButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherYourClubButton" />

    <TextView
        android:id="@+id/clubHubTeacherTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/comfortaa_light"
        android:text="@string/chteacher"
        android:textColor="#4A4E69"
        android:textSize="43sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/teacherSignOutButton"
        android:layout_width="129dp"
        android:layout_height="71dp"
        android:layout_marginBottom="250dp"
        android:background="#C4D7F2"
        android:fontFamily="casual"
        android:onClick="SignOut"
        android:text="@string/signout"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/teacherYourClubButton"
        android:layout_width="102dp"
        android:layout_height="49dp"
        android:background="#C4D7F2"
        android:fontFamily="casual"
        android:onClick="goToClubList"
        android:text="@string/yourClubs"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/teacherCLubFinderButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clubHubTeacherTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>